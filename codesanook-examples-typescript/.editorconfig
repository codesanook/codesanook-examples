# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true

[*.tsx]
indent_size = 2

# Matches multiple files with brace expansion notation
[*.{js, ts, jsx, tsx, .yml, .css, .scss}]
indent_size = 2

